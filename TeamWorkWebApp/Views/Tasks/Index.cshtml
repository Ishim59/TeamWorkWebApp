        .container_tasks {
            display: grid;
            grid-template-columns: 300px auto; /* Set fixed width for the group container */
            grid-row: 2;
            grid-template-rows: auto 1fr;
            height: 72vh;
            box-sizing: border-box;
            border-radius: 10px; /* Скругление углов контейнера */
            border: 2px solid black;
            padding: 10px;
            margin-bottom: 60px;
        }

        .task-container {
            display: flex;
            flex-direction: column;
        }

        .tasks {
            margin-top: 15px;
            border: 2px solid black;
            margin-right: 10px;
            padding: 10px;
            border-radius: 10px; /* Скругление углов контейнера */
            overflow-y: auto;
            height: 440px;
            max-height: 440px;
            /* scrollbar-width: 20px;*/
        }

        .add-task {
            margin-top: auto; /* Переместить кнопку вниз контейнера */
            display: flex;
            justify-content: center;
            padding-top: 10px;
        }

       /*  .add-group-button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            cursor: pointer;
        } */

        .tasks::-webkit-scrollbar {
            width: 20px; /* Установить ширину полосы прокрутки */
            margin-left: -20px; /* Сдвинуть полосу прокрутки влево */
        }

        /* Стилизация ползунка прокрутки */
        .tasks::-webkit-scrollbar-thumb {
            background-color: gray; /* Цвет ползунка */
            border-radius: 10px; /* Скругление углов ползунка */
        }

        .tasks ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .tasks ul li {
            margin-bottom: 10px;
        }

        .tasks ul li button {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            width: 100%;
            padding: 10px;
            border-radius: 10px;
            border: 2px solid black;
            background-color: white;
            cursor: pointer; /* Изменение курсора на указатель при наведении */
            position: relative;
        }

        .tasks ul li button:hover {
            background-color: #e0e0e0;
        }

        .button-content {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .button-title {
            font-weight: bold;
            text-align: center;

        }

        .button-text {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            width: 100%;
            text-align: left; /* Align text to the left */
        }

        /* .button-number {
            position: absolute;
            top: 10px;
            right: 10px;
            font-weight: bold;
        } */

        /* .content {
                    border: 2px solid black;
                    margin-right: 10px;
                    padding: 10px;
                    border-radius: 10px;
                } */
        .content {
            border: 2px solid black;
            padding: 10px;
            border-radius: 10px; /* Скругление углов контейнера */
            width: 970px; /* Set fixed width for the content container */
            overflow-y: auto;
            max-height: 500px;
            position: relative;
            height: 490px;
        }

        .task-details {
            display: flex;
            flex-direction: column;
        }

        .task-title {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .task-description {
            font-size: 16px;
            margin-bottom: 20px;
        }

        .mark-as-completed {
            position: absolute;
            bottom: 10px;
            right: 10px;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            cursor: pointer;
        }

        .task-icon {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 20px;
            height: 20px;
        }

        .title-group{
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    
    <div class="container_tasks">
        
        <div class="task-container">
            <div class="title-group">
                Название группы
            </div>
            <div class="tasks">
                <ul>
                    <li><button>
                        <div class="button-content">
                            <div class="button-title">Задача 1</div>
                        </div>
                        </button>
                    </li>
                    <li>
                        <button>
                            <div class="button-content">
                                <div class="button-title">Задача 2</div>
